<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
      http://www.liquibase.org/xml/ns/pro
      http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <preConditions>
        <dbms type="postgresql"/>
    </preConditions>

    <changeSet id="create-table-positions" author="Alexander Reztsov">
        <createTable tableName="jobs">
            <column name="job_id" type="int">
                <constraints primaryKey="true"/>
            </column>

            <column name="job_title" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>

        </createTable>

        <insert tableName="jobs">
            <column name="job_id" value="0"/>
            <column name="job_title" value="BASIC_EMPLOYEE"/>
        </insert>

       <insert tableName="jobs">
            <column name="job_id" value="1"/>
            <column name="job_title" value="MANAGER"/>
        </insert>

       <insert tableName="jobs">
            <column name="job_id" value="2"/>
            <column name="job_title" value="DIRECTOR"/>
        </insert>

        <rollback>
            <dropTable tableName="jobs"/>
        </rollback>
    </changeSet>

</databaseChangeLog>

